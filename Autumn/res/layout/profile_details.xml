<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageButton
        android:id="@+id/icon_left"
        android:src="@drawable/icon_down_left"
        android:contentDescription="@string/icon_arrow_desc"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <LinearLayout
        android:layout_toRightOf="@id/icon_left"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip" >
        
        <TextView
            android:id="@+id/institute_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Stuying at ABC college" />
        
        <TextView
            android:id="@+id/further_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major in Computer Science" />
        
    </LinearLayout>
    
    <ImageButton
        android:src="@drawable/icon_down_right"
        android:contentDescription="@string/icon_arrow_desc"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
